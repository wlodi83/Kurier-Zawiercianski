<h2>Edit Categories</h2>

<p><%= link_to 'Create New Category', new_category_path %></p>

<ul>
<% @categories.each do |category| %>
  <li>
   <%= link_to category.name, category_articles_url(:category_id => category) %>
   [<%= link_to 'Edit', edit_category_path(category) %>]
   [<%= link_to 'Delete', category_path(category), :method => :delete, 
                          :confirm => 'Are you sure you wish to delete this category?' %>]                        
   <br />
   <% if category.children.empty? %>
   
   <% else %>
    <ul>
      <% category.children.each do |subcategory| %>
      <li>
      <%= link_to subcategory.name, category_articles_url(:category_id => subcategory) %>
      [<%= link_to 'Edit', edit_category_path(subcategory) %>]
      [<%= link_to 'Delete', category_path(subcategory), :method => :delete, 
                          :confirm => 'Are you sure you wish to delete this category?' %>]                        
   <br />
      </li>
      <% end %>
    </ul>
   <% end %>
 </li> 
<% end %>
</ul>
