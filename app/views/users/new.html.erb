<div class="new_user">
<%= error_messages_for :user %>
<fieldset>
  <legend>Rejestracja</legend>
<% form_for :user, :url => users_path do |f| -%>
  <p>
    <label for="user_name">Imię:</label><%= f.text_field :username, :size => 40 -%>
  </p>
  <p>
    <label for="user_email">Email:</label><%= f.text_field :email, :size => 40 -%>
  </p>
  <p>
    <label for="user_password">Hasło:</label><%= f.password_field :password, :size=> 40 -%>
   </p>
  <p>
    <label for="user_password_conf">Potwierdź hasło:</label><%= f.password_field :password_confirmation, :size => 40 -%>
  </p>
  <p>
    <label for="user_profile">Krótki opis:</label><%= f.text_area :profile, :rows => 5, :cols => 30 %>
  </p>
<%= submit_tag 'Rejestracja', :class => "submit" %>
<% end -%>
</fieldset>
</div>