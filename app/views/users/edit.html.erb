<% title("Edycja profilu") %>
<p><%= link_to 'Pokaż profil', user_path(@user) %></p><br />
   <% error_messages_for :user %>
<div class="edit_user">
<% form_for :user, :url => user_url(@user), :html => {:method => :put} do |f| -%>
 <fieldset>
   <legend>Edycja konta</legend>
  <p>
   <label for="user_email">Email:</label><%= f.text_field :email, :size => 40 %>
  </p>
  <p>
   <label for="user_password">Hasło:</label><%= f.password_field :password, :size => 40 %>
  </p>
  <p>
   <label for="password_confirmation">Potwierdź hasło:</label>
   <%= f.password_field :password_confirmation, :size => 40 %>
  </p>
  <p>
    <label for="user_profile">Krótki opis:</label><%= f.text_area :profile, :rows => 5, :cols => 30 %>
  </p>
<%= submit_tag 'Zapisz', :class => 'submit'%>
<% end -%>
 </fieldset>
</div>