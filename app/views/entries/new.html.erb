<h1>New blog entry</h1>
<%= error_messages_for :entry %>

<% form_for(:entry, :url => entries_path) do |f| %>
  <p>Title:<br /><%= f.text_field :title, :size => 40 -%></p>
  <p>Blog Entry:<br /><%= f.text_area :body, :rows => 10, :cols => 60 -%></p>
  <p><%= submit_tag "Create" %>
<% end %>
<%= link_to 'Back', entries_path %>